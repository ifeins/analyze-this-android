<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/transaction_row_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/ic_vector_merchant"/>

    <TextView
        android:id="@+id/transaction_row_merchant_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/transaction_row_image_view"
        android:layout_marginStart="32dp"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Vong"
        />

    <TextView
        android:id="@+id/transaction_row_amount_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/transaction_row_merchant_view"
        android:layout_marginStart="32dp"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="end"
        tools:text="â‚ª100.00"/>

</merge>